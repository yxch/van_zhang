<script src='js/jquery-1.8.3.min.js'></script>
<script>
   $(window).scroll(function(){
		var targetPercentage = 70;
		var navBarHeight = 66;
		var scrollTo = $(window).scrollTop(), // 滚动的高度
		docHeight = $(document).height(), // 文档的高度
		windowHeight = $(window).height(); // 当前窗口的高度
		scrollPercent = (scrollTo / (docHeight-windowHeight)) * 100; // 百分数
		scrollPercent = scrollPercent.toFixed(1); // 四舍五入
		$('#percentageCounter h1').text(scrollPercent+"%"); // 显示当前的滚动百分比
		// 如果滚动值大于 70出现 navigation
		if(scrollPercent > targetPercentage)
		{
			$('#navigation').css({top:'0'});
		}else // 如果滚动值小于 70 隐藏 navigation即使navigation的top值为负的它的高度值
		{
			$('#navigation').css({ top: '-' + navBarHeight + 'px'});
		}
	}).trigger('scroll');
</script>

