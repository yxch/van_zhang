samples.doc.css

body{line-height: 1.5em;}
h1{width:100%;height:48px;line-height:48px;font-size:1.5em;text-align: center;background-color:lavender;}
h2{width:96%;margin:1.5em auto;}
h2 a{text-decoration: none;}
div{width:96%;margin:1.5em auto;display:none;}
div > dl{box-shadow: 1px 1px 8px #808080;padding-bottom: 16px;margin-top:0.125em;padding-top:0.75em;}
div > dl > dt{text-indent:2%;margin-bottom: 0.75em;}
div > dl > dd {display:none;width:96%;margin:auto;border-bottom: 1px solid #DCDCDC;}
div > dl i{font-size:0.75em;color:#FA8072;}
div > dl > dt > a {color:#800000;text-decoration: none;}
h2 > a > img,div > dl > dt > a > img{width:20px;height:15px;vertical-align: middle;margin-left:5%;}

samples.doc.js
$(document).ready(function(){
	var src={"up":'/cross/image/arrow-up.jpg',"down":'/cross/image/arrow-down.jpg'};
	$('h2 a').on('click',function(){
		var dl = $(this).parent().next('div');
		if($(this).hasClass('off'))
		{
			$(this).removeClass('off');
			$(this).children('img').attr("src",src.down);
			dl.show();
		}else
		{
			$(this).addClass('off');
			$(this).children('img').attr("src",src.up);
			dl.hide();
		}
	});
	$('dt a').on('click',function(){
		if($(this).hasClass('on'))
		{
			$(this).removeClass('on');
			$(this).parent().siblings('dd').hide();
			$(this).children('img').attr("src",src.up);
		}else
		{
			$(this).addClass('on');
			$(this).parent().siblings('dd').show();
			$(this).children('img').attr("src",src.down);
		}
	});
});

